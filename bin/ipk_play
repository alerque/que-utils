#!/usr/bin/env zsh

speed=1.0
version=_kendra_1
case $1 in
	001)
		version=x
		;;
	002)
		speed=1.1
		_margs="-ss 4"
		;;
	028)
		_margs="-ss 1"
		;;
	033)
		speed=0.833
		;;
esac

R=${HOME}/Nextcloud/ipk/ilahi_refakat_kayÄ±tlar/${1}$version.mp4
M=${HOME}/Nextcloud/tprk/ilahiler/$1.midi

if [[ -f $R ]]; then
	set -x
	nice -n -20 mplayer -quiet -ao pulse -af scaletempo -speed $speed ${(z)_margs} $R
	set +x
elif [[ -f $M ]]; then
	set -x
	nice -n -20 fluidsynth -q -a alsa -l -i /usr/share/soundfonts/FluidR3_GM.sf2 $M
	set +x
else
	echo "Fatal: no sources" >&2
	exit 1
fi
