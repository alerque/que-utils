#!/usr/bin/env zsh

whence chromium chromium-browser google-chrome | head -n1 | read CHROME

: ${DISPLAY:=:0}

pkill edit-server

~/bin/edit-server &

args=$@

case $(xdpyinfo | grep resolution | awk -F'[x ]*' '{print $3}') in
	235)
		args="--force-device-scale-factor=2 $args"
		;;
esac

$CHROME $args

kill %1
