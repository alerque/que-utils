#!/bin/zsh

CHROME=$(which chromium || which chromium-browser || which google-chrome)

: ${DISPLAY:=:0}

pkill edit-server

~/bin/edit-server &

args=$@

case $(xdpyinfo | grep resolution | awk -F'[x ]*' '{print $3}') in
	235)
		args="--force-device-scale-factor=2 $args"
		;;
esac

$CHROME $args

kill %1
